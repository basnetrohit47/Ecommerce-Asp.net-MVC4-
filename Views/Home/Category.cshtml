@model CityHomeNpl.Models.Multi
@{
    Layout = null;
}
<html lang="en">
<!DOCTYPE html>


<head>
    <link rel="shortcut icon" href="~/Images/bluelogo.png"  />
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>City Home</title>
     <!-- jQuery -->
    <script src="~/js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="~/js/bootstrap.min.js"></script>

    <!-- Script to Activate the Carousel -->
    <script>
        $('.carousel').carousel({
            interval: 5000 //changes the speed
        })
    </script>
    <!-- Bootstrap Core CSS -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
      <link rel='stylesheet prefetch' href='http://netdna.bootstrapcdn.com/font-awesome/3.1.1/css/font-awesome.css'>
    <!-- Custom CSS -->
    <link href="~/css/business-casual.css" rel="stylesheet">
<link href="~/css/shop-homepage.css" rel="stylesheet" />
    <!-- Fonts -->
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800" rel="stylesheet" type="text/css">
    <link href="http://fonts.googleapis.com/css?family=Josefin+Slab:100,300,400,600,700,100italic,300italic,400italic,600italic,700italic" rel="stylesheet" type="text/css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

    <body>

   <div class="brand"><img class="logo"  src="@Url.Content("~/Images/bluelogo.png")" alt=""> </div>
    <div class="address-bar">MitraPark,Chabaihil | Kathmandu | 014496089</div>

    <!-- Navigation -->
    <nav class="navbar navbar-default" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <!-- navbar-brand is hidden on larger screens, but visible when the menu is collapsed -->
                 <a   @*class="navbar-brand"*@ href="@Url.Action("Index", "Home")"><img class="logo"  src="@Url.Content("~/Images/bluelogo.png")" alt=""></a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="@Url.Action("Index", "Home")">Home</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Category", "Home", new { id =2 })">Kitchen</a>
                    </li>
                   
                    <li>
                        <a href="@Url.Action("Category", "Home", new { id =3 })">Solar Water Heater</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Category", "Home", new { id =6 })">Battery Backup</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Login","Account")">Login</a>
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>
    <div class="container">

        <div class="row">

            <div class="col-md-3 divc">
                <p class="lead">Shop Name</p>
                <div class="list-group">
                    @foreach(var item in Model.Category){
                        
                    <a href="@Url.Action("Category", "Home", new { id = item.CategoryId })" class="list-group-item">@Html.DisplayFor(i=>item.Categoryname)</a>
                    }
                 
                </div>
            </div>

            <div class="col-md-9">
    
                <div class="col-md-12 pad" >
                    @foreach(var item in Model.singlecat){
                    <h4>@Html.DisplayFor(i=>item.Categoryname)</h4>}
                     </div>
                
                <div class="row">
                    @foreach(var item in Model.Details){
                    <div class="col-sm-4 col-lg-4 col-md-4">
                        <div class="thumbnail">
                            <img src="~/Images/@item.Image" alt="">
                            <div class="caption">
                                <h4 class="pull-right">@Html.DisplayFor(i=>item.Price)</h4><br />
                                <h4><a href="#">@Html.DisplayFor(c=>item.Modelname)</a>
                                </h4>
                                <a href="@Url.Action("More", "Home", new { id =@item.Productid })">See More</a>
                                <p>@Html.DisplayFor(c=>item.Description) </p>
                            </div>
                            
                        </div>
                    </div>
                    }
                   

                    

                </div>

            </div>

        </div>

    </div>
    <!-- /.container -->
    <footer>
       
                <div class="col-lg-12 text-center f">
                    <p>Copyright &copy;City Home</p>
                     <a href="https://twitter.com/CityHomeNepal" class="icon-button twitter"><i class="icon-twitter"></i><span></span></a>
<a href="https://www.facebook.com/citynhome/?fref=ts" class="icon-button facebook"><i class="icon-facebook"></i><span></span></a>

                </div>
            
    </footer>
  
</body>

</html>
