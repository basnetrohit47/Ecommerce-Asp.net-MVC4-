@model CityHomeNpl.Models.Multi
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <link rel="shortcut icon" href="~/Images/bluelogo.png"  />
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>City Home</title>
     <!-- jQuery -->
    <script src="~/js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="~/js/bootstrap.min.js"></script>

    <!-- Script to Activate the Carousel -->
    <script>
        $('.carousel').carousel({
            interval: 5000 //changes the speed
        })
    </script>
     <link rel='stylesheet prefetch' href='http://netdna.bootstrapcdn.com/font-awesome/3.1.1/css/font-awesome.css'>
    <link href="~/css/shop-homepage.css" rel="stylesheet" />
    <!-- Bootstrap Core CSS -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/bootstrap-social.css" rel="stylesheet" />
    <link href="~/css/font-awesome.css" rel="stylesheet" />
    <!-- Custom CSS -->
    <link href="~/css/business-casual.css" rel="stylesheet">

    <!-- Fonts -->
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800" rel="stylesheet" type="text/css">
    <link href="http://fonts.googleapis.com/css?family=Josefin+Slab:100,300,400,600,700,100italic,300italic,400italic,600italic,700italic" rel="stylesheet" type="text/css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

<body>
    <div class="brand"><img class="logo"  src="@Url.Content("~/Images/bluelogo.png")" alt=""> </div>
  <div class="brand">City Home</div>
    <div class="address-bar">MitraPark,Chabahil | Kathmandu | 9851014660,9841291011,014496089</div>

    <!-- Navigation -->
    <nav class="navbar navbar-default " role="navigation">
        <div class="container ">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
               
                <!-- navbar-brand is hidden on larger screens, but visible when the menu is collapsed -->
                <a   href="@Url.Action("Index", "Home")"><img class="logo"  src="@Url.Content("~/Images/bluelogo.png")" alt=""></a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="@Url.Action("Index", "Home")">Home</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Category", "Home", new { id =2 })">Kitchen</a>
                    </li>
                   
                    <li>
                        <a href="@Url.Action("Category", "Home", new { id =3 })">Solar Water Heater</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Category", "Home", new { id =6 })">Solar Light</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Login","Account")">Login</a>
                    </li>
                     
                         
                     
                </ul>
             
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>

    <div class="container">

        <div class="row">
            <div class="box">
                <div class="col-lg-12 text-center">
                    <div id="carousel-example-generic" class="carousel slide">
                        <!-- Indicators -->
                        <ol class="carousel-indicators hidden-xs">
                            <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                            <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                            <li data-target="#carousel-example-generic" data-slide-to="2"></li>
                        </ol>

                        <!-- Wrapper for slides -->
                        <div class="carousel-inner">
                            <div class="item active">
                                <img class="img-responsive img-full" src="@Url.Content("~/Images/slide1.jpg")" alt="">
                            </div>
                            <div class="item">
                                <img class="img-responsive img-full" src="@Url.Content("~/Images/slide2.jpg")" alt="">
                            </div>
                            <div class="item">
                                <img class="img-responsive img-full" src="@Url.Content("~/Images/slide3.jpg")" alt="">
                            </div>
                        </div>

                        <!-- Controls -->
                        <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                            <span class="icon-prev"></span>
                        </a>
                        <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                            <span class="icon-next"></span>
                        </a>
                    </div>
                    <h2 class="brand-before">
                        <small>Welcome to</small>
                    </h2>
                    <h1 class="brand-name">City Home Nepal</h1>
                    <hr class="tagline-divider">
                    <h2>
                        <small>
                            <strong>City Home for City Life</strong>
                        </small>
                    </h2>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="box">
                <div class="col-sm-3 col-lg-3 col-md-3 n">
                    <div class="thumbnail">
                 <a href="@Url.Action("Category", "Home", new { id =5 })">
                            
    
                            <img src="@Url.Content("~/Images/purifier.jpg")" alt="">
                            <div class="caption">
                            
                                <h4>Water Purifier
                                </h4>
                               
                            </div>
                            </a>
                        </div>
                    </div>
                <div class="col-sm-3 col-lg-3 col-md-3 n">
                     <div class="thumbnail">
                    <a href="@Url.Action("Category", "Home", new { id =1 })">
                           
                            <img src="@Url.Content("~/Images/doors.jpg")" alt="">
                            <div class="caption">
                            
                                <h4>Doors
                                </h4>
                               
                            </div>
                            </a>
                        </div>
                    </div>
                <div class="col-sm-3 col-lg-3 col-md-3 n">
                        <div class="thumbnail">
                            <a href="@Url.Action("Category", "Home", new { id =4 })">
                            <img src="@Url.Content("~/Images/flooring.jpg")" alt="">
                            <div class="caption">
                            
                                <h4>Flooring
                                </h4>
                               
                            </div>
                            </a>
                        </div>
                    </div>
                <div class="col-sm-3 col-lg-3 col-md-3 n">
                    <div class="thumbnail">
                   <a href="@Url.Action("Category", "Home", new { id =8 })">     
                            <img src="@Url.Content("~/Images/railling.jpg")" alt="">
                            <div class="caption">
                            
                                <h4>steel relling
                                </h4>
                               
                            </div>
                            </a>
                        </div>
                    </div>
              
               
                </div>
            </div>
     

        <div class="row">
            <div class="box">
              
                    <hr>
                    <h2 class="intro-text text-center">
                        <strong>FEATURE PRODUCTS</strong>
                    </h2>
                    <hr>
               
                @foreach(var i in Model.Feature)
                {
                   <div class="col-sm-3 col-lg-3 col-md-3">
                        <div class="thumbnail">
                            <img src="~/Images/@i.image" alt="">
                            <div class="caption">
                                <h4 class="pull-right">@Html.DisplayFor(item=>i.price)</h4><br />
                                <h4><a href="#">@Html.DisplayFor(item=>i.Name)</a>
                                </h4>
                                <a href="@Url.Action("More", "Home", new { id =@i.Id })">See More</a>
                                <p>@Html.DisplayFor(item=>i.description)</p>
                            </div>
                           
                        </div>
                    </div>
                }
                    

                </div>
            </div>
        
        <div class="row">
            <div class="box">
             
                    <hr>
                    <h2 class="intro-text text-center">
                        <strong>LATEST PRODUCTS</strong>
                    </h2>
                    <hr>
                @foreach(var item in Model.Latest)
                {
                   <div class="col-sm-3 col-lg-3 col-md-3">
                        <div class="thumbnail">
                            <img src="~/Images/@item.image " alt="">
                            <div class="caption">
                                <h4 class="pull-right">@Html.DisplayFor(i=>item.price)</h4>
                                <h4><a href="#">@Html.DisplayFor(i=>item.Name)</a>
                                </h4>
                                <a href="@Url.Action("More", "Home", new { id =@item.Id })">See More</a>
                                <p>@Html.DisplayFor(i=>item.description)</p>
                            </div>
                           
                        </div>
                    </div>
                }
                   

                </div>
            </div>
    </div>
    <!-- /.container -->

    <footer>
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <p>Copyright &copy; City Home</p>
                  <a href="https://twitter.com/CityHomeNepal" class="icon-button twitter"><i class="icon-twitter"></i><span></span></a>
<a href="https://www.facebook.com/citynhome/?fref=ts" class="icon-button facebook"><i class="icon-facebook"></i><span></span></a>

                </div>
            </div>
        </div>
    </footer>

    <!-- jQuery -->
    <script src="~/js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="~/js/bootstrap.min.js"></script>

    <!-- Script to Activate the Carousel -->
    <script>
        $('.carousel').carousel({
            interval: 5000 //changes the speed
        })
    </script>

</body>

</html>
