@using (Html.BeginForm("Login","Account", FormMethod.Post)){
   <div class="login">
       <label >
                    username</label>@ViewBag.message @Html.ValidationMessageFor(m => m.Username)<br />
       @Html.TextBoxFor(a=>a.Username,new {@class="form-control", @placeholder = "username" })
           <br />
       <label>
                    Password</label>@Html.ValidationMessageFor(m => m.Password)<br />
        @Html.PasswordFor(a=>a.Password,new {@class="form-control", @placeholder = "Password" })<br />
    
       <button type="submit" class="btn btn-info">Login</button>
   </div>
}
