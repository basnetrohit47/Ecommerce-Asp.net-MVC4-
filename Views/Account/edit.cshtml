    <div class="main-content">

        <!-- You only need this form and the form-basic.css -->
        @using (Html.BeginForm("edit", "Account", null, FormMethod.Post,  
                              new { enctype = "multipart/form-data",@class="form-basic" })) {
        <form class="form-basic" method="post" action="#">

            <div class="form-title-row">
                <h1>Form Example</h1>
            </div>
            <div class="form-row ">
                   @Html.ValidationMessageFor(m => m.Modelname)<br />
                   @Html.ValidationMessageFor(m => m.Price)<br />
                 @Html.ValidationMessageFor(m => m.Image)<br />
                 @Html.ValidationMessageFor(m => m.Categoryid)<br />
                 @Html.ValidationMessageFor(m => m.Description)

            </div>
            <div class="form-row">
                <label>
                    <span>Model name</span>
                     @Html.HiddenFor(model => model.Productid)

               @Html.TextBoxFor(m=>m.Modelname)
                    @*<input type="text" name="name">*@
                </label>
            </div>

            <div class="form-row">
                <label>
                    <span>Price Rate</span>
                   @Html.TextBoxFor(m=>m.Price)
                </label>
            </div>
             <div class="form-row">
                <label><span>Front Display</span></label>
                <div class="form-radio-buttons">

          

                    

                    <div>
                        <label>
                     @Html.RadioButtonFor(model => model.FrontDisplay,"yes")
                           
                        </label>
                    </div>

                </div>
            </div>
            <div class="form-row">
                <label>
                    <span>Dropdown</span>
                    @Html.DropDownListFor(x => x.Categoryid, new List<SelectListItem>{
                    new SelectListItem() {Text = "--Select Category--", Value="0"},
                    new SelectListItem() {Text = "Kitchen", Value="2"},
                    new SelectListItem() {Text = "Solar WaterHeater", Value="3"},
                    new SelectListItem() {Text = "Floor", Value=""},
                    new SelectListItem() {Text = "Solar light", Value="7"},
                       new SelectListItem() {Text = "Railling", Value="8"},
                          new SelectListItem() {Text = "Doors", Value="1"},
                             new SelectListItem() {Text = "Inverter/Battery", Value="6"},
                                new SelectListItem() {Text = "Water Purifier", Value="5"}
 })
                   
                </label>
            </div>
             <div class="form-group">
			                        	<label class="sr-only" for="form-email">Image</label>
			                        	<input id="ImagePath" title="Upload a product image" 
                                  type="file" name="file" />
			                        </div>
            <div class="form-row">
                <label>
                    <span>Discription</span>
                    @Html.TextAreaFor(m=>m.Description)
                </label>
            </div>


            <div class="form-row">
                <button type="submit">Submit Form</button>
            </div>

        </form>
        }
    </div>

</body>

